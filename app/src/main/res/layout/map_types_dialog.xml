<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.dji.uxsdkdemo.MapsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_border"
        android:padding="10dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/map_type"
            android:textColor="@color/reply_yellow"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/defaultMapType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_map_icon" />

        <ImageButton
            android:id="@+id/satelliteMapType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/satellite_map" />

        <ImageButton
            android:id="@+id/terrainMapType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/terrain_map_icon" />

        <TextView
            android:id="@+id/defaultMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/defaultMapType"
            android:textColor="@color/reply_yellow"
            android:text="@string/default_map"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/satelliteMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/satelliteMapType"
            android:layout_centerHorizontal="true"
            android:text="@string/satellite"
            android:textColor="@color/reply_yellow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/terrainMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/terrainMapType"
            android:layout_below="@+id/terrainMapType"
            android:textColor="@color/reply_yellow"
            android:textSize="12sp"
            android:text="@string/map_type_terrain" />


    </RelativeLayout>


</RelativeLayout>